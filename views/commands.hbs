<h1>Befehle</h1>
<p>Derzeit sind dem Bot <b>{{bot.commands.length}}</b> Befehle bekannt.</p>
<link href="/style/commandbutton.css" rel="stylesheet">
<div class="container-fluid">
	<div class="row flush-col">
	{{#each bot.commands}}
		<a href="#" class="mix cmd-btn col-sm-3 list-group-item" cmdId="{{name}}">
			<h3><i class="fa fa-{{icon}}"></i> {{name}}</h3>
			<p>{{description}}</p>
		</a>
	{{/each}}
	</div>
</div>
<script>
	$("a.cmd-btn").click(function(e) {
		e.preventDefault();
		$.ajax("/api/command?command=" + $(this).attr("cmdId"));
	});
</script>
