<form id="form-login" action="/api/users/login" method="get">
	<h2 class="form-signin-heading">Anmelden</h2>

	<div class="input-group">
		<span class="input-group-addon" id="basic-addon1"><i class="fa fa-envelope"></i></span>
		<input
			type="text"
			class="form-control"
			placeholder="Benutzername"
			id="login-username"
			name="username" >
	</div>

	<div class="input-group">
		<span class="input-group-addon" id="basic-addon1"><i class="fa fa-lock"></i></span>
		<input
			type="password"
			class="form-control"
			placeholder="Passwort"
			id="login-password"
			name="password" >
	</div>

	<button type="submit" id="login-submit" class="btn btn-primary btn-lg btn-block"><i class="fa fa-unlock"></i> Login</button>
</form>
<script src="/dist/partials/login.js"></script>
