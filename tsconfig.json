{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": false,
        "experimentalDecorators": true,
        "noLib": false,
        "jsx": "react",
        "outDir": "server",
        "lib": ["es2016", "dom"],
        "emitDecoratorMetadata": true,
        "sourceMap": true
    },
    "include": [
        "typings/*",
        "src/**/*.ts?",
        "src/**/*.ts",
        "jest/*.ts"
    ]
}
