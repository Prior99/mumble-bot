{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": false,
        "experimentalDecorators": true,
        "noLib": false,
        "jsx": "react",
        "outDir": "dist",
        "lib": ["es2016", "dom"],
        "emitDecoratorMetadata": true,
        "sourceMap": true
    },
    "include": [
        "typings/*",
        "src/**/*.ts?",
        "src/**/*.ts"
    ],
    "exclude": [
        "src/index.ts",
        "src/commands",
        "**/__tests__/**",
        "**/__mocks__/**"
    ]
}
